{
  "name": "react-html-string-parser",
  "version": "1.0.2",
  "description": "Converting HTML markup to React components on the client and server side.",
  "author": "Krombik",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Krombik/html2react.git"
  },
  "bugs": {
    "url": "https://github.com/Krombik/html2react/issues"
  },
  "homepage": "https://github.com/Krombik/html2react#readme",
  "engines": {
    "node": ">=10"
  },
  "type": "module",
  "source": "src/index.ts",
  "main": "./build/index.cjs",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "default": "./build/index.cjs",
      "types": "./build/index.d.ts"
    },
    "./HTML2React": {
      "import": "./build/HTML2React/index.js",
      "default": "./build/HTML2React/index.cjs",
      "types": "./build/HTML2React/index.d.ts"
    },
    "./styleConverter": {
      "import": "./build/styleConverter/index.js",
      "default": "./build/styleConverter/index.cjs",
      "types": "./build/styleConverter/index.d.ts"
    }
  },
  "files": [
    "build",
    "src",
    "LICENSE",
    "README.md",
    "package.json",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "tsx ./scripts/build.mts",
    "prepublishOnly": "rimraf build && pnpm run build"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "dependencies": {
    "lodash.identity": "^3.0.0"
  },
  "devDependencies": {
    "@types/lodash.identity": "^3.0.7",
    "@types/node": "^20.5.4",
    "@types/react": "^18.2.21",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "html",
    "react",
    "parser",
    "conversion",
    "component",
    "jsx",
    "html-to-react",
    "html-parser",
    "react-components",
    "markup",
    "string-to-react"
  ],
  "sideEffects": false
}
